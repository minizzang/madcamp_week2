<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.items.ItemsFragment">

    <TextView
        android:id="@+id/lendText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="빌려준 물건"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lendList"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lendList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:paddingHorizontal="5dp"
        android:scrollbars="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/lendText"
        app:layout_constraintBottom_toTopOf="@id/borrowText"/>

    <TextView
        android:id="@+id/borrowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="빌린 물건"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/lendList"
        app:layout_constraintBottom_toTopOf="@id/borrowList"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/borrowList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:paddingHorizontal="5dp"
        android:scrollbars="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/borrowText"
        app:layout_constraintBottom_toTopOf="@id/requestedText"/>

    <TextView
        android:id="@+id/requestedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신청한 물건"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/borrowList"
        app:layout_constraintBottom_toTopOf="@id/requestedList"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/requestedList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:paddingHorizontal="5dp"
        android:scrollbars="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/requestedText"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>