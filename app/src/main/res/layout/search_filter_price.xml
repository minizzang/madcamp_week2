<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가격대 선택"
            android:padding="10dp"
            android:textSize="24sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="무료"
                android:textSize="18sp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:layout_margin="7dp"
                android:background="@drawable/main_blue_outline"/>

            <Button
                android:id="@+id/below500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0원 ~ 500원"
                android:textSize="18sp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:layout_margin="7dp"
                android:background="@drawable/main_blue_outline"/>

            <Button
                android:id="@+id/below1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500원 ~ 1,000원"
                android:textSize="18sp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:layout_margin="7dp"
                android:background="@drawable/main_blue_outline"/>

            <Button
                android:id="@+id/below2000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,000원 ~ 2,000원"
                android:textSize="18sp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:layout_margin="7dp"
                android:background="@drawable/main_blue_outline"/>

            <Button
                android:id="@+id/below3000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2,000원 ~ 3,000원"
                android:textSize="18sp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:layout_margin="7dp"
                android:background="@drawable/main_blue_outline"/>

            <Button
                android:id="@+id/above3000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3,000원 초과"
                android:textSize="18sp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:layout_margin="7dp"
                android:background="@drawable/main_blue_outline"/>

            <Button
                android:id="@+id/showAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체 목록 보기"
                android:textSize="18sp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:layout_margin="7dp"
                android:background="@drawable/main_blue_outline"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>